            target_rot: [0.706, 0.0, 0.0, 0.706] 
            arm_states: [0.5, 0.3, 0.2, 0.0, 0.1, 0.0, 0.0]
        },
        
        {
            camera_pos: [1.0, -1.0, 1.0]
            camera_look: [1.0, 0.0, 1.0]
            target_pos: [0.5, 0.5, 0.5]
